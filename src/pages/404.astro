---
import BaseLayout from "@layouts/BaseLayout.astro";
import { Image } from "astro:assets";
---

<BaseLayout title="404">
  <h1>404</h1>
  <p>Are you lost?</p>
  <Image
    src="https://ik.imagekit.io/xqhypdkfa/owr/bliss-hardware.png"
    alt="Bliss artwork"
    inferSize
    loading="eager"
  />
</BaseLayout>

<style lang="scss">
  h1 {
    font-size: 32px;
  }

  p {
    margin-bottom: 10px;
  }

  img {
    width: 100%;
    height: auto;
    border-radius: var(--border-radius);
  }
</style>
